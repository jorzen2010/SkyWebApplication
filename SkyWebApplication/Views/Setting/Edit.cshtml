@model SkyWebApplication.Models.Setting
@{
    ViewBag.Title = "Video";
}
@section Topcss {
    <link href="~/plugins/bootstrap-validator/css/bootstrapValidator.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/iCheck/square/green.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/bootstrap-fileinput/css/fileinput.css" rel="stylesheet" type="text/css" />
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        系统设置
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box">
           
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">

                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab_1" data-toggle="tab">基本设置</a></li>
                                <li><a href="#tab_2" data-toggle="tab">搜索优化</a></li>
                                <li><a href="#tab_3" data-toggle="tab">上传设置</a></li>
                                <li><a href="#tab_4" data-toggle="tab">邮箱设置</a></li>
                                <li><a href="#tab_5" data-toggle="tab">短信设置</a></li>
                                <li><a href="#tab_6" data-toggle="tab">第三方登录设置</a></li>
                                
                               
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1">
                                    <fieldset>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">网站名称</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextBoxFor(model => model.SiteName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">网站logo</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextBoxFor(model => model.Logo, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">网站版权</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextAreaFor(model => model.Copyright, new { @class = "form-control", @rows = 3 })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">网站协议</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextAreaFor(model => model.Protocol, new { @class = "form-control", @rows=10 })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">统计代码</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextAreaFor(model => model.Statistics, new { @class = "form-control", @rows = 10 })
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_2">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">网站名称</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">关键词</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">描述</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 5 })
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_3">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">头像上传路径</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.UploadUrl, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">图片上传路径</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.UploadUrl, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">编辑器上传路径</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.UploadUrl, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">根路径</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.BaseUrl, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_4">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">邮箱服务器</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.EmailHost, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">邮箱端口</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.EmailPort, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">邮箱用户名</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.EmailUser, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">邮箱密码</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.PasswordFor(model => model.EmailPassword, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">激活邮件</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextBoxFor(model => model.EmailPassword, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div>

                        

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-default">取消</button>
                        <button type="submit" class="btn btn-info pull-right">确定</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section FootScripts {
    <script type="text/javascript" src="~/plugins/iCheck/icheck.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-switch/js/bootstrap-switch.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-validator/js/bootstrapValidator.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-fileinput/js/fileinput.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-fileinput/js/fileinput_locale_zh.js"></script>
    <script type="text/javascript" charset="gbk" src="~/plugins/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="gbk" src="~/plugins/ueditor/ueditor.all.min.js"> </script>
    <script type="text/javascript" charset="gbk" src="~/plugins/ueditor/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {


            $('[type="radio"],[type="checkbox"]').iCheck({
                labelHover: false,
                cursor: true,
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
                increaseArea: '20%'
            });


            $('[type="file"]').fileinput({
                'allowedFileExtensions': ['jpg', 'png', 'gif'],
                uploadUrl: '/File/Upload', // you must set a valid URL here else you will get an error
                allowedFileExtensions: ['jpg', 'png', 'gif'],
                overwriteInitial: false,
                maxFileSize: 1000,
                maxFilesNum: 10,
                slugCallback: function (filename) {
                    return filename.replace('(', '_').replace(']', '_');
                }
            });




        });

    </script>
}