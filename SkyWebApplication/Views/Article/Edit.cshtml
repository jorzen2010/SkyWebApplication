@model SkyWebApplication.Models.Article
@{
    ViewBag.Title = "添加文章";
}
@section Topcss {
    <link href="~/plugins/bootstrap-validator/css/bootstrapValidator.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/iCheck/square/green.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/bootstrap-fileinput/css/fileinput.css" rel="stylesheet" type="text/css" />
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>@ViewBag.smallTitle</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box">
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Edit", "Article", FormMethod.Post, new { @class = "form-horizontal", @name = "ArticleForm", @id = "ArticleForm" }))
                {
                    <div class="box-body">
                        @Html.AntiForgeryToken()

                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab_1" data-toggle="tab">修改文章</a></li>
                                <li><a href="#tab_2" data-toggle="tab">搜索引擎优化</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1">
                                    <fieldset>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">文章栏目</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.DropDownListFor(model => model.Category, ViewData["Categorylist"] as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="Keywords" class="col-sm-2 control-label">文章标题</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label for="inputPassword3" class="col-sm-2 control-label">编辑器</label>
                                            <div class="col-sm-8  input-group">
                                                <textarea id="Content" name="Content" style="height:500px;">@Html.Raw(Model.Content)</textarea>

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="Keywords" class="col-sm-2 control-label">标签</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextBoxFor(model => model.Tags, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="Keywords" class="col-sm-2 control-label"> 作者</label>
                                            <div class="col-sm-8  input-group">
                                                @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">显示设置</label>
                                            <div class="col-sm-8  input-group" style="padding-top:7px;">
                                                热门 @Html.CheckBoxFor(model => model.Hot)
                                                加精 @Html.CheckBoxFor(model => model.Essence)
                                                置顶 @Html.CheckBoxFor(model => model.IfTop)
                                                允许评论 @Html.CheckBoxFor(model => model.Comment)
                                                @Html.HiddenFor(model => model.CreatTime)
                                                @Html.HiddenFor(model => model.LastUpdateTime, new { @class = "form-control", @Value = System.DateTime.Now.ToString() })


                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">密码访问</label>
                                            <div class="col-sm-4  input-group">
                                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                                            </div>
                                        </div>

                                    </fieldset>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_2">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
                                        <div class="col-sm-8  input-group">

                                            @Html.TextBoxFor(model => model.CodeTitle, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">关键词</label>
                                        <div class="col-sm-8  input-group">

                                            @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">描述</label>
                                        <div class="col-sm-8  input-group">
                                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                        </div>
                                    </div>

                                </div>
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div>


                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-default">取消</button>
                        <button type="submit" class="btn btn-primary pull-right">保存修改</button>
                    </div>
                    <!-- /.box-footer -->
                }
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section FootScripts {
    <script type="text/javascript" src="~/plugins/iCheck/icheck.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-switch/js/bootstrap-switch.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-validator/js/bootstrapValidator.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-fileinput/js/fileinput.js"></script>
    <script type="text/javascript" src="~/plugins/bootstrap-fileinput/js/fileinput_locale_zh.js"></script>
    <script type="text/javascript" charset="gbk" src="~/plugins/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="gbk" src="~/plugins/ueditor/ueditor.all.min.js"> </script>
    <script type="text/javascript" charset="gbk" src="~/plugins/ueditor/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript" src="~/Resource/js/Article.js"></script>
 
}